@model LogicalData.Class.Usuario

@{
    ViewBag.Title = "Log On";
}

<h2>Login</h2>
<p>
    Porfavor ingrese su nombre de usuario y contrasenya. @Html.ActionLink("Registrar", "Register") si no tiene un usuario.
</p>

@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

@using (Html.BeginForm())
{
    <div class="form-group">
        <fieldset>
            <legend>Informaion de usuario</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Contrasenya)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Contrasenya, new { @class = "form-control" })
            </div>

            <br />
            @*@Html.ValidationSummary(true, "")*@
            <p>
                <input type="submit" class="btn btn-success" value="Login" />
            </p>
        </fieldset>
    </div>
}

